<%= form_for(user, class: 'uk-form-horizontal uk-margin-large') do |f| %>
  <% if user.errors.any? %>
    <%= render alert,
          error_count: user.errors.count,
          messages: user.errors.full_messages %>
  <% end %>

  <div class="uk-margin field">
    <%= f.label :name, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :name, class: 'uk-input' %>
    </div>
  </div>

  <div class="uk-margin field">
    <%= f.label :username, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :username, class: 'uk-input' %>
    </div>
  </div>

  <div class="uk-margin field">
    <%= f.label :password, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :password, class: 'uk-input' %>
    </div>
  </div>

  <div class="uk-margin field">
    <%= f.label :email, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :email, class: 'uk-input' %>
    </div>
  </div>

  <%= user.edit_admin_tag(f) %>

  <div class="actions">
    <%= f.submit 'Save', class: 'uk-button uk-button-default' %>
  </div>
<% end %>
