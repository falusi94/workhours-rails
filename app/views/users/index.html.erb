<%= render partial: 'share/notice', locals: { notice: notice } %>

<div class="uk-clearfix">
  <div class="uk-float-right">
    <%= link_to '',
        new_user_path,
        class: 'uk-icon-link', 'uk-icon': 'icon: plus; ratio: 2' %>
  </div>
  <div class="uk-float-left">
    <h1>Users</h1>
  </div>
</div>

<ul class="uk-list uk-list-divider">
  <% @users.each do |user| %>
    <li class="uk-card uk-card-default uk-card-body">
      <div class="uk-clearfix uk-width-1-1">
        <div class="uk-float-right">
          <%= link_to '',
              edit_user_path(user),
              class: 'uk-icon-link', 'uk-icon': 'icon: pencil' %>
        </div>
        <div class="uk-float-left">
          <%= link_to user.name, user, class: 'uk-h3' %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
